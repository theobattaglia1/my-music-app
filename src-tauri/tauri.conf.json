{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",

  "package": {
    "productName": "my-music-app",
    "version": "0.1.0"
  },

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8080",
    "distDir": "../dist"
  },

  "tauri": {
    "windows": [
      {
        "title": "my-music-app",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],

    "bundle": {
      "active": true,
      "targets": ["dmg","msi","deb"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },

    "security": {
      "csp": null
    }
  }
}
